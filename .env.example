# Google Ads API Configuration
# Get your developer token from your MCC account's API Center
GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token_here

# OAuth2 credentials from Google Cloud Console
# Download credentials.json and run: bun run scripts/get-refresh-token.ts
GOOGLE_ADS_CLIENT_ID=your_oauth_client_id_here
GOOGLE_ADS_CLIENT_SECRET=your_oauth_client_secret_here
GOOGLE_ADS_REFRESH_TOKEN=your_refresh_token_here

# Optional: Default customer ID to use (without dashes)
# This should be a client account ID, not MCC ID
# Example: 1234567890 (not 123-456-7890)
GOOGLE_ADS_DEFAULT_CUSTOMER_ID=

# MCP Server Configuration
MCP_SERVER_NAME=google-ads-mcp
MCP_SERVER_VERSION=1.0.0